<view>
  <view class="login-icon">
    <image class="login-img" src="../../resource/images/dsp.jpg"></image>
  </view>
  <view>
    <form bindsubmit="doLogin">
      
      <view class="input-view">
        <image class="input-icon" src="../../resource/images/username.png"></image>
        <label class="loginLabel">账号：</label>
        <input name="username" value="" class="inputText" placeholder="请输入用户名"/>
      </view>

      <view class="input-view">
        <image class="input-icon" src="../../resource/images/password.png"></image>
        <label class="loginLabel">密码：</label>
        <input name="password" value="" class="inputText" password="true" placeholder="请输入密码"></input>
      </view>

      <!-- 按钮 -->
      <view class="btn">
        <view class="btn-item">
          <button class="login-btn" type="primary" form-type="submit">登录</button>
        </view>

        <view class="btn-item">
          <button class="login-btn" type="warn" bindtap="goRegist">还没有账号？去注册</button>
        </view>
      </view>
    </form>
  </view>
</view>